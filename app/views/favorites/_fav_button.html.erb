<% unless current_user == micropost.user %>
  <% if current_user.favoriting?(micropost) %>
  
    <%= form_for(current_user.favorites.find_by(fav_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :fav_id, micropost.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-xs' %>
    <% end %>
    
  <% else %>
  
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :fav_id, micropost.id %>
      <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>
<% end %>